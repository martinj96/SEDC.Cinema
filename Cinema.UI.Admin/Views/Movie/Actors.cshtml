@model Cinema.AppServices.DTOs.MovieActorDto

@{
    ViewBag.Title = "Actors";
}

<h2>Actors</h2>

<p>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(model => model.IncludedActors.First().Id, "Actor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-">
                @Html.DropDownListFor(model => model.IncludedActors.First().Id, Model.ExcludedActors, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IncludedActors.First().Id, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.HiddenFor(model => model.movieId)

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Add Actor" class="btn btn-default" />
            </div>
        </div>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IncludedActors.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IncludedActors.First().Surname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.IncludedActors) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.ActionLink("Remove", "Remove", new { id=item.Id, movieId=Model.movieId })
        </td>
    </tr>
}

</table>
